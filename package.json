{
  "name": "sistema-gestion",
  "private": true,
  "version": "1.0.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "desktop:dev": "npm run dev --workspace=@sistema/desktop",
    "desktop:build": "npm run build --workspace=@sistema/desktop",
    "desktop:package": "npm run package --workspace=@sistema/desktop"
  },
  "devDependencies": {
    "turbo": "^1.11.0"
  }
}