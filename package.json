{
  "name": "sistema-gestion",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "desktop:dev": "npm run dev -w @sistema/desktop",
    "desktop:build": "npm run build -w @sistema/desktop",
    "desktop:package": "npm run package -w @sistema/desktop"
  },
  "devDependencies": {
    "turbo": "^1.11.0"
  }
}