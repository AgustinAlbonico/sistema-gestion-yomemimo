{
    "name": "@sistema/desktop",
    "version": "1.0.5",
    "description": "NexoPOS - Aplicaci√≥n de Escritorio",
    "main": "dist/electron/main.js",
    "author": "Agustin Albonico",
    "license": "UNLICENSED",
    "scripts": {
        "dev": "ts-node scripts/dev.ts",
        "build": "npm run build:frontend && npm run build:backend && npm run build:electron && npm run copy-deps && npm run package",
        "build:frontend": "npm run build --workspace=@sistema/frontend",
        "build:backend": "npm run build:bundle --workspace=@sistema/backend",
        "build:electron": "tsc -p tsconfig.json",
        "copy-deps": "node scripts/copy-deps.js",
        "package": "electron-builder --win --config electron-builder.yml",
        "package:dir": "electron-builder --win --dir --config electron-builder.yml"
    },
    "dependencies": {
        "electron-log": "^5.4.3",
        "electron-updater": "^6.1.7",
        "express": "^4.21.0",
        "pg": "^8.16.3"
    },
    "devDependencies": {
        "@types/node": "^20.10.0",
        "@types/pg": "^8.16.0",
        "electron": "^30.0.0",
        "electron-builder": "^24.9.1",
        "ts-node": "^10.9.2",
        "typescript": "^5.3.3"
    }
}