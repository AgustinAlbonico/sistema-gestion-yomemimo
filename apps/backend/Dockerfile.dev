FROM node:20-alpine

# Instalar pnpm
RUN npm install -g pnpm

WORKDIR /app

# Copiar archivos de dependencias
COPY package*.json pnpm-lock.yaml* ./

# Instalar dependencias
RUN pnpm install --silent || true

# Copiar el resto del c√≥digo
COPY . .

# Exponer puerto
EXPOSE 3000

# Comando de desarrollo
CMD ["pnpm", "run", "dev"]
